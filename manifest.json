{
  "manifest_version": 3,
  "name": "InstaYou",
  "version": "1.0",
  "author": "Ajmal Razaq Bhatti",
  "description": "Simple tool to track Instagram followers and following",
  "icons": {
    "16": "icon.png",
    "32": "icon.png",
    "48": "icon.png",
    "128": "icon.png"
  },
  "permissions": ["storage", "activeTab", "scripting"],
  "host_permissions": ["*://www.instagram.com/*"],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icon.png",
      "32": "icon.png",
      "48": "icon.png",
      "128": "icon.png"
    }
  }
}
